<?xml version="1.0" encoding="utf-8"?>

<!--
Navigation Graph (New XML resource)
This is a resource that contains all navigation-related information
in one centralized location. This includes all the places in your app,
known as destinations, and possible paths a user could take through your app.
-->

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_navigation_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="celik.abdullah.navigationwithbottomnavigationmenuandoverflowmenu.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/notificationsFragment"
        android:name="celik.abdullah.navigationwithbottomnavigationmenuandoverflowmenu.NotificationsFragment"
        android:label="@string/notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/shopFragment"
        android:name="celik.abdullah.navigationwithbottomnavigationmenuandoverflowmenu.ShopFragment"
        android:label="@string/shop"
        tools:layout="@layout/fragment_shop" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="celik.abdullah.navigationwithbottomnavigationmenuandoverflowmenu.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />
</navigation>